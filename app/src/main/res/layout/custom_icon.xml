<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="26dp"
              android:background="@drawable/item_cart_img_bg"
              android:gravity="center"


              android:orientation="vertical"
              android:paddingBottom="@dimen/height_10"
              android:paddingLeft="@dimen/height_20"
              android:paddingRight="@dimen/height_20"
              android:paddingTop="@dimen/height_20"

    >

    <ImageView
        android:id="@+id/icon_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />

    <TextView
        android:id="@+id/icon_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_10"
        android:gravity="center"
        android:text="123"
        android:textColor="@color/text_color_97"
        android:textSize="12sp"/>

    <!-- android:shadowColor="#bb000000"
        android:shadowRadius="2.5"
        android:shadowDx="5"
        android:shadowDy="5"-->
</LinearLayout>


